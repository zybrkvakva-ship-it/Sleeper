# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/nightminer
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nightminer
DB_USER=nightminer
DB_PASSWORD=your_password_here

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_CLUSTER=mainnet-beta
# or use QuickNode/Helius for production:
# SOLANA_RPC_URL=https://your-quicknode-endpoint.com
# SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# AllDomains ANS Program
ANS_PROGRAM_ID=ALTNSZ46uaAUU7XUV6awvdorLGqAsPwa9shm7h4uP2FK

# NFT Configuration
GENESIS_NFT_PROGRAM_ID=<will_be_set_after_deploy>
