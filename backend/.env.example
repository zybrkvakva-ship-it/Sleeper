GENESIS_NFT_SUPPLY=10000

# SKR Token
SKR_TOKEN_MINT=<skr_token_mint_address>
TREASURY_WALLET=<treasury_wallet_address>

# Economy Constants
SEASON_POOL=5000000
MAX_DEVICES=150000
MAX_SOCIAL_BOOST=0.4
MAX_TOTAL_MULTIPLIER=6.0

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
